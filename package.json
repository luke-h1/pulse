{
  "name": "pulse",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "clean": "pnpm -r --parallel exec rm -rf node_modules && rm -rf node_modules",
    "lint": "eslint \"./apps/**/*.{js, jsx,ts,tsx}\" --quiet --fix && eslint \"./**/*.{js, jsx,ts,tsx}\" --quiet --fix",
    "lint:style": "stylelint --fix apps/**/*.{scss,css}",
    "format": "prettier --write \"apps/**/*.{js,jsx,ts,tsx,css,scss,html}\"",
    "format:check": "prettier --list-different \"apps/**/*.{js,jsx,ts,tsx,css,scss,html}\"",
    "test": "pnpm -r --no-bail test",
    "test:snapshot": "pnpm -r --no-bail test:snapshot",
    "test:ci": "pnpm -r --no-bail --aggregate-output --reporter=append-only test:ci",
    "test:coverage": "pnpm -r --no-bail test:coverage",
    "tsc": "pnpm -r --no-bail tsc",
    "check:node": "check-node-version --node 18 --pnpm 8",
    "preinstall": "pnpm run check:node",
    "prepare": "husky install"
  },
  "dependencies": {
    "check-node-version": "^4.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "chalk": "^4.1.0",
    "cross-spawn": "^7.0.3",
    "eslint": "^8.44.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "^13.4.7",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.3",
    "prettier": "^2.8.8",
    "scramjet": "^4.35.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint"
    ],
    "*.{js,jsx,ts,tsx,css,scss,html}": [
      "prettier --write"
    ]
  }
}
